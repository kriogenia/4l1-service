{
	"compilerOptions": {
	  "module": "commonjs",
	  "esModuleInterop": true,
	  "target": "es6",
	  "noImplicitAny": true,
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "experimentalDecorators": true,
	  "emitDecoratorMetadata": true,
	  "sourceMap": true,
	  "outDir": "dist",
	  "baseUrl": ".",
	  "typeRoots": [
		  "./src/@types",
		  "./node_modules/@types"
	  ],
	  "paths": {
		"@server": [
			"src/Server"
		],
		"@/*": [
			"src/*"
		]
	  }
	},
	"include": [
	  "src/**/*"	
	]
  }