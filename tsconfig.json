{
	"compilerOptions": {
	  "module": "commonjs",
	  "esModuleInterop": true,
	  "target": "es6",
	  "noImplicitAny": true,
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "experimentalDecorators": true,
	  "emitDecoratorMetadata": true,
	  "sourceMap": true,
	  "outDir": "dist",
	  "baseUrl": ".",
	  "paths": {
		"@server": [
			"src/Server"
		],
		"@/*": [
			"src/*"
		]
	  }
	},
	"include": [
	  "src/**/*",
	  "__tests__/**/*",
	  "jest.config.ts"
	]
  }